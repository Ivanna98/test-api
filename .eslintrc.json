{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "max-len": "error",
        "no-unused-vars": "off",
        "linebreak-style": "off",
        "no-underscore-dangle": "off",
        "no-useless-escape": "off"
    }
}